package bodypartitems;

import java.util.Iterator;
import java.util.Map;

import com.amazonaws.auth.EnvironmentVariableCredentialsProvider;
import com.amazonaws.regions.Regions;
import com.amazonaws.services.dynamodbv2.AmazonDynamoDB;
import com.amazonaws.services.dynamodbv2.AmazonDynamoDBClient;
import com.amazonaws.services.dynamodbv2.AmazonDynamoDBClientBuilder;
import com.amazonaws.services.dynamodbv2.document.DynamoDB;
import com.amazonaws.services.dynamodbv2.document.Index;
import com.amazonaws.services.dynamodbv2.document.Item;
import com.amazonaws.services.dynamodbv2.document.ItemCollection;
import com.amazonaws.services.dynamodbv2.document.QueryOutcome;
import com.amazonaws.services.dynamodbv2.document.Table;
import com.amazonaws.services.dynamodbv2.document.spec.QuerySpec;
import com.amazonaws.services.dynamodbv2.document.utils.ValueMap;
import com.amazonaws.services.dynamodbv2.model.AttributeValue;
import com.amazonaws.services.dynamodbv2.model.ScanRequest;
import com.amazonaws.services.dynamodbv2.model.ScanResult;
import com.amazonaws.services.lambda.runtime.Context;
import com.amazonaws.services.lambda.runtime.RequestHandler;

public class LambdaFunctionHandler implements RequestHandler<String, BodyPartItemResponse> {

    @Override
    public BodyPartItemResponse handleRequest(final String input, final Context context) {
    	final AmazonDynamoDBClient client = new AmazonDynamoDBClient(new EnvironmentVariableCredentialsProvider());
		client.withRegion(Regions.US_WEST_2);
		final DynamoDB dynamoDB = new DynamoDB(client);
		final Table table = dynamoDB.getTable("BodyPartItems");
		final Index index = table.getIndex("BodyPart-index");
		
		//System.out.println("input = " + input);
		
		final ItemCollection<QueryOutcome> items = index.query("BodyPart", input);
		final BodyPartItemResponse bodyPartItemResponse = new BodyPartItemResponse();
		
		for(final Item item : items) {
			final BodyPartItem bodyPartItem = new BodyPartItem();
			bodyPartItem.setId(item.getInt("Id"));
			bodyPartItem.setBodyPart(item.getString("BodyPart"));
			bodyPartItem.setEquipment(item.getString("Equipment"));
			bodyPartItem.setExerciseName(item.getString("ExerciseName"));
			bodyPartItem.setImageUrl(item.getString("ImageUrl"));
			bodyPartItem.setType(item.getString("Type"));
			bodyPartItem.setVideo(item.getString("Video"));
			bodyPartItemResponse.getBodyPartItemsList().add(bodyPartItem);
		}
		return bodyPartItemResponse;
    }
}
